FROM microsoft/dotnet:2.1-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/dotnet:2.1-sdk AS build
WORKDIR /src
COPY HassanCehef/HassanCehef.TrainDataService/HassanCehef.TrainDataService.csproj HassanCehef/HassanCehef.TrainDataService/
RUN dotnet restore HassanCehef/HassanCehef.TrainDataService/HassanCehef.TrainDataService.csproj
COPY . .
WORKDIR /src/HassanCehef/HassanCehef.TrainDataService
RUN dotnet build HassanCehef.TrainDataService.csproj -c Release -o /app

FROM build AS publish
RUN dotnet publish HassanCehef.TrainDataService.csproj -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "HassanCehef.TrainDataService.dll"]
